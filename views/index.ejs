<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<table id="example" class="table table-striped" style="width:100%">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.0/css/dataTables.bootstrap5.css">
    <link rel="stylesheet" href="../public/style.css" type="text/css">
    <style>


        .container {
            display: flex;
            flex-direction: column; 
            align-items: center; 
        }

        .form-container {
            display: flex;
            margin-top: 20px; 
        }

        .form-container form {
            margin-right: 10px; 
        }

        .form4 {
            margin-top: 20px; 
        }
        a{
            text-decoration: none;
            text-decoration-color: darkgreen;
           
        }
        a:hover{
            color:black;
        }

    </style>
</head>
<body>
    <script async src="https://cse.google.com/cse.jsjs?cx=b2809a9ebea4a4ffc">
    </script>
    <!-- Searc Toold -->
    <div class="search-tools">
        <div class="container text-center">
            <div class="row">
                <div class="container">
                    <form class="form1" method="POST" action="/search" id="form1">
                        <div id="form-id" class="form-group row">
                            <div class="col">
                                <input type="text" class="form-control" id="inputText" name="keyword" placeholder="Keywords" style="width: 300px;">
                            </div>
                            <button type="submit" class="btn btn-dark col-sm-2 col-form-button" style="width: 130px;">Submit</button>
                        </div>
                    </form>
                    <form class="form4" method="POST" action="" id="form4">
                        <div id="form-id" class="form-group row">
                            <div class="col">
                                <input type="text" class="form-control" id="inputText" name="keyword" placeholder="Filter" style="width: 300px;">
                            </div>
                            <button type="submit" class="btn btn-dark col-sm-2 col-form-button" style="width: 130px;">Filter</button>
                        </div>
                    </form>
                    <div class="form-container">
                        <form class="form2" method="GET" action="/dateSort" id="form2">
                            <button type="submit" class="btn btn-dark">Date Sort before=>after</button>
                        </form>
                        <form class="form3" method="GET" action="/quotationSort" id="form3">
                            <button type="submit" class="btn btn-dark">Quote Sort less => more</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    



            <div class="gs_res">
                <% for(let i = 0; i < publications.length; i++){ %>
                 <div class="gs_r" style="border-style: ridge;margin: 20px; width: 50%; margin-left: 400px;">
                    <h3>
                    <a href=<%=publications[i]._id %>><%= publications[i].name%></a>
                    </h3>
                    <div><%= publications[i].authors%></div>
                    <div>Alıntı : <%= publications[i].quotationCount%> Yayımlanma Tarihi : <%= publications[i].publicationDate.getDate() + "." + publications[i].publicationDate.getMonth() + "." + publications[i].publicationDate.getFullYear()%></div>
                </div>
            <% } %>
            </div>
    
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.0/js/dataTables.bootstrap5.js"></script>
</body>
</html>